{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["project/ui/pages/*"],
      "@ui-fixtures/*": ["tests-ui/fixtures/*"],
      "@entities/*": ["project/entities/*"],
      "@components/*": ["project/ui/components/*"],
      "@elements/*": ["project/ui/elements/*"],
      "@api/*": ["project/api/*"],
      "@helpers-ui/*": ["project/ui/helpers/*"],
      "@interfaces-ui/*": ["project/ui/interfaces/*"],
    },
    "types": ["node", "@playwright/test", "k6"]
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": [
    "tests-ui/**/*",
    "tests-api/**/*",
    "project/**/*",
    "framework/**/*",
    "playwright.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test-results",
    "playwright-report"
  ]
}